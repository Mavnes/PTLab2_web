@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<div class="page">
    <main>
        <MudDrawerContainer Class="mud-height-full">
            <MudDrawer @bind-Open="@open" Fixed="false" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
                <MudNavMenu>
                    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Store">Каталог</MudNavLink>
                    <MudNavLink Href="/account" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Person">Аккаунт</MudNavLink>
                </MudNavMenu>
            </MudDrawer>
            <div class="d-flex justify-center align-center mud-height-full">
                <article class="content px-4">
                    @Body
                </article>
            </div>
        </MudDrawerContainer>
    </main>
</div>
